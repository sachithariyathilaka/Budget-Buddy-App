<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginRight="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/windowBackground"

        android:gravity="center">

        <ImageView
            android:id="@+id/itemlist_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/thumb_down" />

        <TextView
            android:id="@+id/itemlist_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/itemlist_icon"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/itemlist_icon"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@color/textColorSecondary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemlist_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemlist_title"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/itemlist_icon"
            android:ellipsize="end"
            android:textColor="@color/textColorSecondary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/itemlist_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemlist_amount"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/itemlist_icon"
            android:ellipsize="end"
            android:textColor="@color/textColorSecondary"
            android:textSize="14sp"
            android:textStyle="italic" />


    </RelativeLayout>
</android.support.v7.widget.CardView>